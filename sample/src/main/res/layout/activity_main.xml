<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shunan.circularprogressview.MainActivity">

 <com.shunan.circularprogressview.CircularProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:progressBackgroundColor="@color/primary_light"
        app:progressBackgroundWidth="2dp"
        app:progressColor="@color/primary_dark"
        app:progressWidth="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fadeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FADE"/>

        <Button
            android:id="@+id/sweepButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SWEEP"/>
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"/>

</RelativeLayout>
